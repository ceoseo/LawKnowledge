generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/@prisma/db-chat"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ChatHistory {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  question String
  answer   String
  date     DateTime @default(now())
  user_id  String
}
