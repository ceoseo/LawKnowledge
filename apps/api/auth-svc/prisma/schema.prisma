generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String
  email     String      @unique
  phone     String?
  card      String      @unique
  address   String?
  password  String?
  UserRoles UserRoles[]
}

model Roles {
  id        String      @id @default(uuid())
  name      String      @unique
  UserRoles UserRoles[]
}

model UserRoles {
  id      String @id @default(uuid())
  user_id String
  role_id String
  User    User   @relation(fields: [user_id], references: [id])
  Roles   Roles  @relation(fields: [role_id], references: [id])
}
